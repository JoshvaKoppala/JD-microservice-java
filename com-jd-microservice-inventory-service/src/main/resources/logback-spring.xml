<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder><pattern>%d{yyyy-MM-dd HH:mm:ss} %5p [${spring.application.name}, %X{traceId}, %X{spanId}] - %msg%n</pattern></encoder>
    </appender>

    <appender name="PERFORMANCE" class="ch.qos.logback.core.FileAppender">
        <file>logs/performance.log</file>
        <encoder><pattern>%d [${spring.application.name}, %X{traceId}] %msg%n</pattern></encoder>
    </appender>

    <logger name="com.jd.performance" level="INFO" additivity="false">
        <appender-ref ref="PERFORMANCE" />
    </logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
